<%= form_for @event, html: { multipart: true } do |f| %>

  <% @event.errors.full_messages.each do |msg| %>
    <p class="alert alert-danger" role="alert"><%= msg %></p>
  <% end %>
  
<div class="form-group">
  <label>Name</label>
    <%= f.text_area :name, rows: 1, placeholder: "Give your event a name!", class: "form-control" %>
  <div class="form-group">
    <label>Location</label>
      <%= f.text_area :description, rows: 1, placeholder: "What is the location of your event?", class: "form-control" %>
  </div>

  <div class="form-group">
    <label>Description</label>
    <%= f.text_area :description, rows: 5, placeholder: "Say something about your event", class: "form-control" %>
  </div>


  <hr>

    <label>Categories</label>

    <%= f.collection_check_boxes(:category_ids, Category.all, :id, :name) do |b| %>
      <div class="form-group">
        <%= b.check_box(class: "check_box") %> <%= b.object.name %>
      </div>
    <% end %>




  <div class="form-group">
    <%= f.check_box :includes_food %> Food available
  </div>
  <div class="form-group">
    <%= f.check_box :includes_drinks %> Drinks available
  </div>



  <div class="form-group">
    <label>price</label>
    <div class="input-group">
      <div class="input-group-addon">â‚¬</div>
      <%= f.number_field :price, placeholder: "eg. 100", class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <label>Capacity</label>
    <div class="input-group">
      <div class="input-group-addon">amount</div>
      <%= f.number_field :capacity, placeholder: "eg. 10", class: "form-control" %>
    </div>
  </div>

  <div class="form-group"> <!-- Date input -->
       <label class="control-label" for="date">Date</label>
       <%= f.number_field :starts_at, placeholder: "MM/DD/YYYY", class: "form-control" %>
     </div>

<label> Add a picture to your event </label>
<div class="form-group">
  <span class="btn btn-default">
    Upload Photos
    <%= file_field_tag "images[]", type: :file, multiple: true %>
  </span>
</div>
<div id="photos">
  <%= render 'photos/list' %>
</div>


  <label>Publish this event?</label>

  <div class="form-group">
    <%= f.check_box :active %> Active
  </div>

  <div class="actions">
    <%= f.submit "Save", class: "btn btn-primary" %>
  </div>
<% end %>
